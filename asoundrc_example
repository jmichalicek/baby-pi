# an example .asoundrc from https://github.com/popcornmix/omxplayer/issues/579#issuecomment-338114561
# the slave pcm stuff may need adjusted based on /proc/asound/cards
pcm.!default {
  type plug
  slave.pcm "dmixer"
}

pcm.dsp0 {
  type plug
  slave.pcm "dmixer"
}

pcm.dmixer {
  type dmix
  ipc_key 1024 # the key must be unique
  ipc_key_add_uid 0
  ipc_perm 0666# permissions - octal notation
  slave {
    pcm "hw:0,0"               # <<<<--- see cat /proc/asound/cards
    period_time 0
    period_size 1024
    buffer_size 8192
    rate 48000 #or 44100
  }
}

ctl.dmixer {
  type hw
  card 0                      # <<<<--- see cat /proc/asound/cards
}
